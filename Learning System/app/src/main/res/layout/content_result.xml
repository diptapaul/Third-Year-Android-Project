<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/finalback"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.diptapaul.learningsystem.ResultActivity"
    tools:showIn="@layout/activity_result">

    <TextView
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/outline6"
        android:text="Result"
        android:textSize="25dp"
        android:textColor="#fff"
        android:fontFamily="monospace"
        android:id="@+id/res"
        android:gravity="center"/>

    <TextView
        android:id="@+id/t15"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:text="Congratulation!\nYou have just unlock next chapter."
        android:textColor="#fff"
        android:fontFamily="monospace"
        android:textSize="20dp"
        android:gravity="center_horizontal"/>
    <Button
        android:id="@+id/b16"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Back to Learning"
        android:textColor="#fff"
        android:background="@drawable/outline5"/>

</LinearLayout>
