<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lay"
    android:orientation="vertical"
    android:background="@drawable/finalback"
    tools:context="com.example.diptapaul.learningsystem.SigninActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2980B9"
        >
        <android.support.v7.widget.Toolbar
            android:background="#2980B9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Sign In"
            app:titleTextColor="#fff">
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LEARNING SYSTEM"
        android:textSize="30dp"
        android:textColor="#fff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The app where you can learn"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp"
        android:textColor="#fff"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:src="@drawable/mainicon"
        android:layout_marginTop="15dp"
        android:backgroundTint="#00ffffff"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:id="@+id/et1"
        android:textColor="#fff"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/outline"
        android:padding="15dp"
        android:hint="Email..."
        android:textColorHint="#C3C3C3"
        android:drawableRight="@drawable/email"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:padding="15dp"
        android:textColor="#fff"
        android:background="@drawable/outline"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:id="@+id/et2"
        android:layout_gravity="center_horizontal"
        android:hint="Password..."
        android:drawableRight="@drawable/password"
        android:textColorHint="#C3C3C3"
        />

    <Button
        android:id="@+id/b1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/outline5"
        android:text="sign in"
        android:textColor="#fff"
        android:padding="15dp"
        android:textSize="17dp"
        />

    <Button
        android:id="@+id/b2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Forget Password"
        android:textColor="#C3C3C3"
        android:layout_marginTop="10dp"
        android:paddingBottom="60dp"
        android:background="#00ffffff"/>

</LinearLayout>
